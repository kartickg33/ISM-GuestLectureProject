<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./admin.css" />
    <title>Admin Portal</title>
</head>
<body>
    <h1>MegaSeal Admin Portal</h1>
    <p id ="tr"></p>

    <p>Select From The Following Options : </p>
    <form action="redirect" method="post">

        <select id="type" name="type">
            <option value="none" selected disabled hidden>Select From the Following</option>
            <option value="1">1. View All Reports</option>
            <option value="2">2. View By Account Information </option>
            <option value="3">3. View Reports By Account Type</option>
        </select>
        <br>
        <input type="submit" value="Submit" id="signup">
    </form>

</body>
<script>
    var requestOptions = {
        method: 'GET',
        redirect: 'follow'
    };

    fetch("http://localhost:5500/allreports", requestOptions)
    .then(response => response.text())
    .then(function(result){
        const obj = JSON.parse(result);
        document.getElementById("tr").innerHTML = "Total Cases Reported Till Now : <strong>" + obj.length+ "</strong>";
    });

</script>
</html>